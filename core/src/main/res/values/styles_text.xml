<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance" />

    <style name="TextAppearance.Headline">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Title">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Title.Large">
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextAppearance.Title.Small">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Body">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="TextAppearance.Body.Large">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Body.Secondary">
        <item name="android:textColor">@color/grey_300</item>
    </style>

    <style name="TextAppearance.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Button" parent="TextAppearance.Title.Small" />

</resources>
