<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/red_400</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/red_400</item>
        <item name="android:windowBackground">@color/grey_800</item>
        <item name="android:navigationBarColor">@color/grey_850</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>

    <style name="AppTheme.Introduction">
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:navigationBarColor">@color/grey_850</item>
        <item name="android:statusBarColor">@color/grey_850</item>
    </style>

</resources>
