<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleTextView"
        style="@style/TextAppearance.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_space"
        android:alpha="0.8"
        tools:text="Rate movie" />

    <LinearLayout
        android:id="@+id/positiveButton"
        android:layout_width="match_parent"
        android:layout_height="?attr/listPreferredItemHeight"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:paddingStart="@dimen/default_space"
        android:paddingEnd="@dimen/default_space">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:alpha="0.8"
            android:contentDescription="@string/show_more_like_this"
            android:src="@drawable/ic_outline_thumb_up"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/positiveButtonText"
            style="@style/TextAppearance.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/default_space"
            android:layout_weight="1"
            android:text="@string/show_more_like_this" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/negativeButton"
        android:layout_width="match_parent"
        android:layout_height="?attr/listPreferredItemHeight"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:paddingStart="@dimen/default_space"
        android:paddingEnd="@dimen/default_space">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:alpha="0.8"
            android:contentDescription="@string/show_less_like_this"
            android:rotation="180"
            android:src="@drawable/ic_outline_thumb_up"
            android:tint="@android:color/white" />

        <TextView
            android:id="@+id/negativeButtonText"
            style="@style/TextAppearance.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/default_space"
            android:layout_weight="1"
            android:text="@string/show_less_like_this" />

    </LinearLayout>

</LinearLayout>
