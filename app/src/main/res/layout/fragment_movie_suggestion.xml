<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".ui.suggestions.SuggestionFragment">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/movie_poster"
        android:scaleType="centerCrop" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_space">

        <!-- Movie information -->
        <LinearLayout
            android:id="@+id/show_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottom_bar"
            android:background="@color/cover_overlay"
            android:orientation="horizontal"
            android:paddingStart="@dimen/default_space"
            android:paddingLeft="@dimen/default_space"
            android:paddingTop="@dimen/default_space"
            android:paddingEnd="@dimen/default_space"
            android:paddingRight="@dimen/default_space">

            <ImageView
                android:id="@+id/show_more_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/small_space"
                android:alpha="0.85"
                android:src="@drawable/ic_keyboard_arrow_up_white_24dp" />

            <TextView
                android:id="@+id/show_more_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.85"
                android:text="@string/show_more"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="italic" />

        </LinearLayout>

        <!-- Show more -->
        <LinearLayout
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_movie_chip_bottom"
            android:orientation="horizontal"
            android:padding="@dimen/default_space">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/movie_add_watchlist_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/add_to_watchlist"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:cornerRadius="@dimen/small_space" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/rating_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/default_space"
                android:layout_marginEnd="@dimen/tiny_space"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_thumbs_up_down_white_24dp" />

        </LinearLayout>

        <!-- Bottom bar -->
        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/show_more"
            android:background="@drawable/background_movie_chip_top"
            android:fadingEdgeLength="20dp"
            android:requiresFadingEdge="vertical"
            android:scrollbars="none">

            <!-- Movie information container -->
            <LinearLayout
                android:id="@+id/overlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/default_space"
                android:paddingLeft="@dimen/default_space"
                android:paddingTop="@dimen/default_space"
                android:paddingEnd="@dimen/default_space"
                android:paddingRight="@dimen/default_space">

                <!-- Title -->
                <TextView
                    android:id="@+id/movie_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/small_space"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    tools:text="The Social Network" />

                <TextView
                    android:id="@+id/movie_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.1"
                    android:maxLines="2"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    tools:text="Lorem ipsum" />

                <LinearLayout
                    android:id="@+id/genres_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_space"
                    android:layout_marginBottom="@dimen/tiny_space"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <!-- Movie genres icon -->
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/small_space"
                        android:src="@drawable/ic_movie_white_24dp" />

                    <!-- Movie genres text -->
                    <TextView
                        android:id="@+id/genres"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textIsSelectable="true"
                        android:textSize="16sp"
                        tools:text="Action, Adventure" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/infos_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/small_space"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <ImageView
                        android:layout_width="@dimen/default_space"
                        android:layout_height="@dimen/default_space"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/small_space"
                        android:src="@drawable/ic_star_white_24dp" />

                    <TextView
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/large_space"
                        android:text="@string/loading"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        tools:text="7.4 / 10" />

                    <ImageView
                        android:layout_width="@dimen/default_space"
                        android:layout_height="@dimen/default_space"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/small_space"
                        android:src="@drawable/ic_access_time_white_24dp" />

                    <TextView
                        android:id="@+id/runtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/large_space"
                        android:text="@string/loading"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        tools:text="1:32" />

                    <ImageView
                        android:layout_width="@dimen/default_space"
                        android:layout_height="@dimen/default_space"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/small_space"
                        android:src="@drawable/ic_today_white_24dp" />

                    <TextView
                        android:id="@+id/release"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        tools:text="2014" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/streamingContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_space"
                    android:layout_marginBottom="@dimen/small_space"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <!-- Movie genres icon -->
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/small_space"
                        android:src="@drawable/ic_personal_video" />

                    <!-- Movie genres text -->
                    <TextView
                        android:id="@+id/streamingTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textIsSelectable="true"
                        android:textSize="16sp"
                        tools:text="Available on: iTunes, Netflix" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/action_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/trailer_button"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/watch_trailer"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/more_info_button"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_space"
                        android:text="@string/more_info"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</FrameLayout>